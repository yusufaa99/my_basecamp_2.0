<li class="list-group-item d-flex justify-content-between align-items-center <%= 'bg-light' unless notification.read %>">
  <a href="<%= notification.url %>">
    <strong><%= notification.message %></strong>
    <small class="text-muted d-block"><%= time_ago_in_words(notification.created_at) %> ago</small>
  </a>
  <div>
    <% unless notification.read? %>
      <%= link_to "Mark as Read", mark_as_read_notification_path(notification), method: :patch, class: "btn btn-sm btn-success" %>
    <% end %>
    <%= button_to "Delete", notification_path(notification), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
  </div>
</li>
