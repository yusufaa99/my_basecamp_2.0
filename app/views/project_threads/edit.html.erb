<h1>Edit Thread</h1>

<%= form_with model: [@project, @thread], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Thread Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= f.submit "Update Thread", class: "btn btn-primary" %>
  <%= link_to "Cancel", @project, class: "btn btn-secondary" %>
<% end %>
