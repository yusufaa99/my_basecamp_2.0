<h1><%= @discussion_thread.title %></h1>
<p><%= @discussion_thread.description %></p>
<p><strong>Created by:</strong> <%= @discussion_thread.user.email %></p>

<hr>
<h2>Messages</h2>
<% @messages.each do |message| %>
  <div class="card mb-2">
    <div class="card-body">
      <p><%= message.content %></p>
      <p class="small text-muted">Posted by <%= message.user.email %> on <%= message.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% if message.user == current_user %>
        <%= link_to "Edit", edit_discussion_thread_message_path(@discussion_thread, message), class: "btn btn-sm btn-secondary" %>
        <%= link_to "Delete", discussion_thread_message_path(@discussion_thread, message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
<% end %>

<%= will_paginate @messages %>

<hr>
<h3>Post a New Message</h3>
<%= form_with model: [@discussion_thread, Message.new], local: true do |f| %>
  <div class="mb-3">
    <%= f.text_area :content, rows: 4, class: "form-control", placeholder: "Enter your message here..." %>
  </div>
  <div class="mb-3">
    <%= f.submit "Post Message", class: "btn btn-primary" %>
  </div>
<% end %>
