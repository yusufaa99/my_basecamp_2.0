<h1>Edit User Admin Status</h1>

<%= form_for [:admin, @user] do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, class: "form-control", disabled: true %>
  </div>
  <div class="mb-3 form-check">
    <%= f.check_box :admin, class: "form-check-input" %>
    <%= f.label :admin, "Admin Privileges", class: "form-check-label" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Update User", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", admin_users_path, class: "btn btn-secondary" %>
