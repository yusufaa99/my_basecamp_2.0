<h1>Edit Message</h1>
<%= form_with model: [@discussion_thread, @message], local: true do |f| %>
  <% if @message.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 4, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Update Message", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to "Back", discussion_thread_path(@discussion_thread), class: "btn btn-secondary" %>
