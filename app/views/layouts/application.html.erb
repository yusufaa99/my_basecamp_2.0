<!DOCTYPE html>
<html>
  <head>
    <title>MyBaseCamp2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS (CDN for simplicity) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
      <div class="container">
        <a class="navbar-brand" href="<%= root_path %>">MyBaseCamp2</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="nav-link">Welcome, <%= current_user.email %></span>
              </li>
              <li class="nav-item">
                <%= link_to "Edit Profile", edit_profile_path, class: "nav-link" %>
              </li>
              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to "Admin Dashboard", admin_users_path, class: "nav-link" %>
                </li>
              <% end %>
              <li class="nav-item">
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-link nav-link", data: { confirm: "Are you sure?" } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type == "alert" ? "danger" : "success" %>">
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
